@model TonerTracker.Domain.Entity.Company
@using TonerTracker.Utilities.Constant

@{
   ViewData["Title"] = "Detail";
}

<div class="container-fluid pt-4 px-4">
   <div class="row g-4">
      <div class="col-12">
         <div class="theme-bg-secondary theme-font-color rounded h-100 p-4">
            <h1 class="mb-4 display-6">Detail of @Model.CompanyName</h1>
            <!--ALERT-->
            @if (Convert.ToString(TempData[SessionConstant.Message]).Length > 1)
            {
               <div class="alert alert-success alert-dismissible text-center fade show" id="alert" role="alert">
                  <i class="bi bi-check-circle-fill"></i>&nbsp; @TempData[SessionConstant.Message]
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
               </div>
            }
            <!--DELETE COUNTRY-->
            <div class="card theme-bg-secondary theme-font-color shadow-sm mb-1">
               <div class="card-body">
                  <div class="row">
                     <div class="col-4">@Html.DisplayNameFor(model => model.CompanyName) </div>
                     <div class="col-8">: @Html.DisplayFor(model => model.CompanyName)</div>
                  </div>
                  <div class="row">
                     <div class="col-4">@Html.DisplayNameFor(model => model.Address)</div>
                     <div class="col-8">: @Html.DisplayFor(model => model.Address)</div>
                  </div>
                  <!--ACTION:-->
                  <div class="row mt-2">
                     <form>
                        <a asp-action="Index" class="btn btn-success mt-2"><i class="fas fa-long-arrow-alt-left"></i> &nbsp;Back To List</a>
                     </form>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>

<script type="text/javascript">
   window.setTimeout(function () {
      $('#alert').remove('fast');
   }, 2000);
</script>